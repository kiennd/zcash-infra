# Zcash Infrastructure Environment Variables
# Copy this file to .env and update the values as needed

# Data directory for persistent storage
DATA_DIR=/media/data-disk

# Zcash RPC credentials for lightwalletd
LIGHTWALLETD_RPC_USER=zcash
LIGHTWALLETD_RPC_PASSWORD=your_secure_password_here

# Zebra configuration
ZEBRA_P2P_PORT=8233
ZEBRA_RPC_PORT=8232

# Zaino configuration
ZAINO_GRPC_PORT=8137

# Caddy configuration
CADDY_EMAIL=your-email@example.com

# Grafana configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=your_secure_password_here
GF_USERS_ALLOW_SIGN_UP=false
GRAFANA_DOMAIN=localhost
GRAFANA_ROOT_URL=http://localhost:3000
GRAFANA_SERVE_FROM_SUB_PATH=false
